doctype html
html(lang='en')
  include layouts/head.jade
  +head('Express.JS')
  body
    br
    br
    .container
        .row
            .col-sm-12.offset-md-3.col-md-6
                .jumbotron
                    h2.text-center Login
                    .row
                         .col-sm-12.col-md-12.col-xs-12
                            form(action="/checklogin", method='POST')
                                .formgroup
                                    label.small.mb-1.mt-3 Email:
                                    input(placeholder="Please enter your email", required=true, name="email",
                                    type="email").form-control
                                    label.small.mb-1.mt-3 Password:
                                    input(placeholder="Enter your password", required=true, name="password",
                                    type="password").form-control
                                    button.mt-3.btn.btn-primary(type="submit") Login
                                    p.mt-2.mb-0
                                        | Forget your password? #[a(href="/") Reset Here]
                                    p.m-0
                                        | Don't have an account? #[a(href="/register") Sign Up Here]
  include layouts/footer.jade
  +footer()