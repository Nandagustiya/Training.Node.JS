doctype html
html(lang='en')
  include ../layouts/head.jade
  +head('Express.JS')
  body
    header
      include ../layouts/nav.jade
      +nav()
      br
      .container
        .row.aligns-items-center
          .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
            h1 Edit Data User
            br
            form(action="/users/edit_action/#{ (_id == undefined) ? user._id : _id }", method="POST")
                .form-group
                    label(for="email").col-md-3.control-label E-mail
                    .col-md-6
                        input(type="text", name="email", id="email", value="#{ (email == undefined) ? user.email : email }").form-control
                .form-group
                    input(type="hidden", name="_method", value="PUT")
                    .col-sm-offset-3.col-sm-6
                        button(type="submit").btn.btn-primary
                            i.fa.fa-save
                            | Edit
                        | &nbsp;
                        a(href="/users/list").btn.btn-danger Kembali
  include ../layouts/footer.jade
  +footer()